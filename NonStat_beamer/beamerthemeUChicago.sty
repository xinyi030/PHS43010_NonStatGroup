\mode<presentation>

% required packages
\RequirePackage{graphicx}
\RequirePackage{textpos}


% define the color "Maroon"
\definecolor{Maroon}{RGB}{128,0,0}


% add uchicago logo to title page
\titlegraphic{\vspace{1em}\includegraphics[width=10em]{uchicago.eps}}


% title
\setbeamerfont{title}{series=\bfseries}
\setbeamercolor{title}{fg=black}


% remove navigation symbols at footers
\setbeamertemplate{navigation symbols}{}


% define footer
\setbeamertemplate{footline}{

    \ifnum \insertframenumber=1
        % title page has no footer
        {}
    \else
        % all pages after the title page have a footer
        \hspace*{1em} \hrulefill \hspace*{1em} \vspace{.5em}

        \hspace*{1em} \insertshortauthor \hfill \insertshorttitle \hfill
            \insertframenumber \hspace*{1em} \vspace{.5em}
    \fi
}


% frame title (set color and add uchicago seal)
\setbeamercolor{frametitle}{fg=Maroon}
\addtobeamertemplate{frametitle}{}{%
\begin{textblock*}{3em}(.93\textwidth,-.9em)
\includegraphics[height=3em]{ucseal.eps}
\end{textblock*}}

% block style
\useinnertheme[shadow]{rounded}
\setbeamercolor{block title}{fg=white,bg=Maroon!75!black}


% bullet and list styles
\setbeamertemplate{itemize item}[default]
\setbeamercolor{itemize item}{fg=Maroon}

\setbeamertemplate{itemize subitem}[square]
\setbeamercolor{itemize subitem}{fg=Maroon}

\setbeamertemplate{enumerate item}[default]
\setbeamercolor{enumerate item}{fg=black}

\mode<all>
